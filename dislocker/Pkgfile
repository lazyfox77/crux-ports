# Description: dislocker is a FOSS software to read BitLocker encrypted partitions under a Linux system.
# URL: https://github.com/Aorimn/dislocker
# Maintainer: samsep10l at dark_bakura at protonmail dot com
# Depends on: cmake mbedtls fuse
# Optional:

name=dislocker
version=0.7.3
release=1
source=(https://github.com/Aorimn/dislocker/archive/v$version/$name-v$version.tar.gz)

build() {
    cd $name-$version

    cmake -G "Unix Makefiles" \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release

    make
    make DESTDIR=$PKG install
}
